            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <a href="@ViewBag.pathParent/form/bss/log/032/input" id="btnSave" class="btn btn-md btn-success">
                            <i class="material-icons opacity-10">add</i> Input Checklist
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="table-responsive p-0">
                            <table class="table compact table-bordered align-items-center mb-0" id="tblChecklist">
                                <thead>
                                    <tr>
