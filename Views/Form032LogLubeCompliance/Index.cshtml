                                        <th class="text-uppercase text-secondary text-md font-weight-bolder ps-2">Detail Week5</th>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder">Week 5</th>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder">Validasi W5</th>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder">Summary Monthly</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalValidasi" role="dialog" aria-labelledby="modalValidasilLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-normal" id="exampleModalLabel">Approval</h5>
                <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input type="hidden" id="txtId" />
            <input type="hidden" id="txtUser" />
            <input type="hidden" id="txtYear" />
            <input type="hidden" id="txtMonth" />
            <input type="hidden" id="txtWeek" />
            <input type="hidden" id="txtScore" />
            <input type="hidden" id="txtFlag" />
            <div class="modal-body">
                <div class="input-group input-group-static">
                    <div class="input-group input-group-static mb-4">
                        <label>Validator</label>
                        <input type="text" id="txtNik" class="form-control">
                    </div>
                    <label for="exampleFormControlSelect2" class="ms-0">Status Validasi</label>
                    <select class="form-control pb-4" id="ddStatus">
                        <option value="">--PILIH STATUS--</option>
                        <option value=true>APPROVE</option>
                        <option value=false>REJECT</option>
                    </select>
                </div>
                <div class="input-group input-group-dynamic">
                    <textarea id="txtRemark" class="form-control" rows="5" placeholder="Isi note validasi" spellcheck="false"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="Cancel()" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" onclick="Approve()" class="btn bg-gradient-primary" data-bs-dismiss="modal">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalChecklist" role="dialog" aria-labelledby="modalChecklistLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl modal-fullscreen" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-normal" id="exampleModalLabel">
                    Detail Checklist <label class="text-sm" id="lblNik"></label> <label class="text-sm" id="lblNama"></label> <label class="text-sm" id="lblMinggu"></label>
                </h5>
                <button type="button" class="btn-md btn-close text-dark" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="table-responsive p-0">
                            <table class="table table-xs text-xs w-auto compact table-bordered align-items-center mb-0" id="tblDetailStation" data-paging="false">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder opacity-7 ps-2">#</th>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder opacity-7 ps-2">Lube Station</th>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder opacity-7">Ya/Tidak</th>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder opacity-7">Comment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="table-responsive p-0">
                            <table class="table table-xs text-xs w-auto compact table-bordered align-items-center mb-0" id="tblDetailTruck" data-paging="false">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder opacity-7 ps-2">#</th>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder opacity-7 ps-2">Lube Truck</th>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder opacity-7">Ya/Tidak</th>
                                        <th class="text-uppercase text-secondary text-md font-weight-bolder opacity-7">Comment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

